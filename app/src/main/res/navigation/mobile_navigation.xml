<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.desafio_android_stant.ui.ui.home.PopularFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_popular" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.desafio_android_stant.ui.ui.dashboard.TopRatedFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_top_rated" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.desafio_android_stant.ui.ui.notifications.UpComingFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_upcoming" />
</navigation>